server {
    listen       80;
    server_name  localhost;

    location / {
        root   /usr/share/nginx/html;
        try_files $uri /index.html;
    }

    location /login {
        root   /usr/share/nginx/html;
        try_files $uri /login.html;
    }

    location /api/ {
        proxy_pass http://apiserver:8080;
    }

}
